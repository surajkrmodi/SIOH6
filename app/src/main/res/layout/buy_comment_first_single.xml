<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userLin">
        <androidx.cardview.widget.CardView
            android:id="@+id/cV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user_profile"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cV1"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:layout_toEndOf="@+id/userLin"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:background="@drawable/rounded_shape_bg"
            android:paddingRight="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:textStyle="bold"
                android:text="Rohan Singh"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/user_comment"
                android:text="I am at comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:gravity="center_vertical"
                android:singleLine="false"
                android:textColor="#000"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/userLin"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/cV1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 hr"
            android:id="@+id/timeStamp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:textStyle="bold"
            android:id="@+id/reply_comment"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_replies"
            android:layout_below="@id/reply_comment"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:visibility="gone">
            <View
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:id="@+id/divider"
                android:layout_gravity="center"
                android:background="@color/colorDivider"
                />

            <TextView
                android:id="@+id/reply_list"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View 6 replies"
                android:textStyle="bold"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>